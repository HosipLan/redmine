  # Aggiunge uno "0" davanti al numero passato se Ã¨ minore di 10
  def hours_min_string(number)
    str = number.to_s
    str = "0#{number}" if number < 10
    str
  end

  # Restituisce un array di interi da 0 a 55 andando di 5 in 5
  def minutes
    mins = Array.new
    (0..3).each { |i| mins << 15 * i}
    mins
  end
